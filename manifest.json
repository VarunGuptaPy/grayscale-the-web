{
	"manifest_version": 2,
	"name": "GrayScale - Save Sites",
	"description": "Save sites you would like to appear as grayscale.",
	"version": "1.0",
	"author": "Kyle Damken",
	"background": {
		"scripts": [
			"js/manageSites.js", "js/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"js/manageSites.js", "js/content.js"
			],
			"run_at": "document_start"
		}
	],
	"options_page": "options.html",
	"icons": {
		"128": "img/gs-logo-on.png"		
	},
	"browser_action": {
		"default_icon": {
			"128": "img/gs-logo-off.png"
		},
		"default_title": "GrayScale",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"tabs"
	]
}